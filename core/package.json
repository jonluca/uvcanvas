{
  "name": "uvcanvas",
  "version": "0.4.0",
  "type": "module",
  "description": "An open source React.js component library for beautifully shaded canvas, brought to you by Latent Cat.",
  "author": "Latent Cat Team",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "homepage": "https://uvcanvas.com",
  "bugs": {
    "url": "https://github.com/latentcat/uvcanvas/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/latentcat/uvcanvas"
  },
  "scripts": {
    "build": "shx rm -rf ./dist && rollup -c rollup.config.ts --configPlugin typescript",
    "dev": "rollup -c --watch --configPlugin typescript",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "less": "^4.4.1",
    "postcss": "^8.5.6",
    "rollup": "^4.49.0",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-string": "^3.0.0",
    "shx": "^0.4.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.0",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "jotai": "^2.13.1",
    "ogl": "^1.0.11",
    "react-hotkeys-hook": "^5.1.0",
    "react-resize-detector": "^12.1.0"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ]
}
